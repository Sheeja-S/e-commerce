{{#if editProductForm}}
  <div>
    <form>
      <div class="form-group">
        <label for="name">Name</label>
        {{input value=name id="name" placeholder=product.name}}
      </div>

      <div class="form-group">
        <label for="price">Price</label>
        {{input value=price id="price" placeholder=product.price}}
      </div>

      <div class="form-group">
        <label for="content">Content</label>
        {{input value=content id="content" placeholder=product.content}}
      </div>

      <div class="form-group">
        <label for="stock">Stock</label>
        {{input value=stock id="stock" placeholder=product.stock}}
      </div>

      <div class="form-group">
        <label for="image">Image URL</label>
        {{input value=image id="image" placeholder=product.image}}
      </div>

      <button {{action 'edit' product}}>Save</button>
    </form>
  </div>
{{else}}
  <button {{action 'editProductForm'}}>Edit Products</button>
{{/if}}
